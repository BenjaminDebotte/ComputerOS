MINIMUM_FUEL_LEVEL=12
RIGHT=0
LEFT=1
X=8
Y=8
local function refuel()
    if turtleNeedFuel == 0 then
        return true;
    end
    return turtle.refuel()
end

local function digDown()
    print("Dig: "..tostring(turtle.digDown()))
end

local function placeDown()

    for i = 1,16 do
        turtle.select(i)
        if turtle.placeDown() then
            break
        end
    end

end


local function moveFarm()
    if turtle.detectDown() then print("Block detected.") end
    digDown()
    placeDown()
    while turtle.forward() do
        sleep(1)
    end
end



local function nextRow(direction)
    if direction == RIGHT then
        turtle.turnRight()
        turtle.forward()
        digDown()
        placeDown()
        turtle.turnRight()
    end
    if direction == LEFT then
        turtle.turnLeft()
        turtle.forward()
        digDown()
        placeDown()
        turtle.turnLeft()
    end

end

-- Entrypoint

if not refuel() then
    print("Turtle refuel: FAIL")
    return false
end

print("Turtle refueld.")

-- Here it starts --

moveFarm()
turtle.turnRight()
for x = 1, X/2 do
    moveFarm()
    nextRow(RIGHT)
    moveFarm()
    nextRow(LEFT)
end

turtle.turnLeft()
