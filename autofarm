MINIMUM_FUEL_LEVEL=12
RIGHT=0
LEFT=1
X=8
Y=8
local function refuel()
    if turtleNeedFuel == 0 then
        return true;
    end
    return turtle.refuel()
end

local function moveFarm(farm)
    if farm then
        digDown()
        placeDown()
    end
    while turtle.forward() do
        sleep(1)
    end
end

local function digDown() then
    print("Dig: "..tostring(turtle.digDown()))
end

local function placeDown() then
    print("Dig: "..tostring(turtle.digDown()))
end


local function nextRow(direction)
    if direction == RIGHT then
        turtle.turnRight()
        turtle.forward()
        digDown()
        placeDown()
        turtle.turnRight()
    end
    if direction == LEFT then
        turtle.turnLeft()
        turtle.forward()
        digDown()
        placeDown()
        turtle.turnLeft()
    end

end

-- Entrypoint

if not refuel() then
    print("Turtle refuel: FAIL")
    return false
end

print("Turtle refueld.")

-- Here it starts --
turtle.down()
moveFarm(true)
turtle.turnRight()
for x = 1, X/2 do
    moveFarm(true)
    nextRow(RIGHT)
    moveFarm(true)
    nextRow(LEFT)
end
turtle.up()
turtle.turnLeft()
turtle.back()
